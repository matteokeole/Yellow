{% extends "base.html.twig" %}

{% block title %}Yellow : bienvenue dans l'univers des mangas{% endblock %}

{% block body %}
	<style>
		html {box-sizing: border-box}
		.banner {
			display: flex;
			justify-content: center;
			align-items: center;
			height: 300px;
			background: url(images/banner.jpg) center no-repeat;
			background-size: cover
		}
		.button-accueil {
			display: inline-block;
			padding: 10px 30px;
			border-radius: 10px;
			background-color: var(--primary);
			color: #fff;
			transition-duration: 0.5s
		}

				.searchbar {
			display: flex;
			justify-content: center;
			align-items: center;
			margin: 30px 0
		}
		.search-form {
			width: 30%;
			position: relative;
			border-radius: 10px
		}
		.search-input, .btn-search {
			height: 80px;
			border: 0;
			color: #000
		}
		.search-input {
			width: 100%;
			padding: 0 25px;
			position: relative;
			outline: 0;
			border-radius: 10px;
			background-color: lightgrey;
			transition-duration: 0.5s
		}
		.btn-search {
			display: none;
			width: 100px;
			position: absolute;
			top: 0;
			right: 0;
			border-radius: 0 10px 10px 0;
			font-weight: bold;
			background-color: var(--primary)
		}
		.search-input:not(:placeholder-shown) {
			width: calc(100% - 100px);
			border-radius: 10px 0 0 10px
		}
		.search-input:not(:placeholder-shown) + .btn-search {display: block}

				.bs-cadre {
			padding: 5px;
			background-color: var(--primary)
		}
		.best-seller {
			margin: 5px;
			background-color: #fff
		}
		.flex {
			display: flex;
			justify-content: space-evenly;
			align-items: center
		}
		.cover {width: 150px;}

		.text-center {text-align: center;}

		.hr {
			align-items: center;
			display: flex;
			text-align: center;
			padding: 20px 0 20px 0;
			color: gray;
		}

		.hr::before, .hr::after {
			border-top: 0.1em solid;
			color: gray;
			content: "";
			flex: 1;
			margin: 0 3em;
		}

				.soldes {
			margin-top: 30px;
		}

		.texte-soldes {
			border: 3px solid var(--primary);
		}

		.produits-soldes {
			background-color: gray;
			padding: 20px 20px 0 20px;
		}

		.cover-soldes {width: 110px}

		.ml-30 {margin-left: 30px;}		

	</style>
	<div class="banner">
		<a href="{{path('catalog')}}">
			<span class="button-accueil">Consulter notre catalogue de manga</span>
		</a>
	</div>
	<div class="searchbar">
		<form class="search-form">
			<input class="search-input" id="search" type="search" placeholder="Rechercher un produit">
			<button type="submit" class="btn-search">Go</button>
		</form>
	</div>
	<div class="bs-cadre">
		<div class="best-seller">
			<h3 class="hr">NOS BEST-SELLERS</h3>
			<div class="bs-produit flex">
				<div class="text-center">
					<a href="{{path('product', {id: 1})}}">
						<img src="images/cover/onepiece.jpg" class="cover">
					</a>
					<p>One Piece</p>
					<p>6.90€</p>
				</div>
				<div class="text-center">
					<a href="{{path('product', {id: 2})}}">
						<img src="images/cover/dragonball.jpg" class="cover">
					</a>
					<p>Dragon Ball</p>
					<p>6.90€</p>
				</div>
				<div class="text-center">
					<a href="{{path('product', {id: 3})}}">
						<img src="images/cover/naruto.jpg" class="cover">
					</a>
					<p>Naruto</p>
					<p>6.90€</p>
				</div>
			</div>
		</div>
	</div>
	<div class="flex soldes">
		<div class="texte-soldes">
			<h3>Nos produits soldés</h3>
			<p>Profitez de nos remises exeptionnelles sur des centaines d'articles</p>
		</div>
		<div class="produits-soldes">
			<div class="flex">
				<div class="text-center">
					<a href="{{path('product', {id: 1})}}">
						<img src="images/cover/onepiece.jpg" class="cover-soldes">
					</a>
					<p>One Piece</p>
					<p>6.90€</p>
				</div>
				<div class="text-center ml-30">
					<a href="{{path('product', {id: 5})}}">
						<img src="images/cover/berserk.jpg" class="cover-soldes">
					</a>
					<p>Berserk</p>
					<p>6.90€</p>
				</div>
			</div>
			<div class="flex">
				<div class="text-center">
					<a href="{{path('product', {id: 4})}}">
						<img src="images/cover/fullmetalalchemist.jpg" class="cover-soldes">
					</a>
					<p>Fullmetal Alchemist</p>
					<p>6.60€</p>
				</div>
				<div class="text-center ml-30">
					<a href="{{path('product', {id: 15})}}">
						<img src="images/cover/pokemon.jpg" class="cover-soldes">
					</a>
					<p>Pokemon</p>
					<p>9.90€</p>
				</div>
			</div>
		</div>
	</div>
{% endblock %}