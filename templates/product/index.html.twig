{% extends "base.html.twig" %}

{% block title %}Nos mangas • Yellow{% endblock %}
{% block body %}
	<style>
		/* Product container & inner container */
		.product-container {
			display:flex;
			margin:20px 35px 35px 35px;
			padding:0px;
		}
		.row{
			display:flex;
			flex-wrap:wrap;
			justify-content:space-evenly;
		}
		footer {margin-top: 0}
		.product {
			width: 280px;
			padding: 8px 0 4px 0;
			position: relative;
			overflow: hidden;
			border-radius: 8px;
			color: #000;
			text-align: center;
			text-decoration: none;
			transition-duration: .2s
		}
		.product:hover {
			box-shadow: 0 10px 20px rgba(0, 0, 0, .1), inset 0 0 0 300px rgba(0, 0, 0, .1);
			-webkit-filter: brightness(.9);
			filter: brightness(.9);
			-webkit-transform: scale(1.1);
			transform: scale(1.1);
			transition-duration: .4s
		}
		.product:active {
			box-shadow: 0 10px 20px rgba(0, 0, 0, .1), inset 0 0 0 300px rgba(0, 0, 0, .2);
			-webkit-filter: brightness(.8);
			filter: brightness(.8);
			-webkit-transform: scale(.95);
			transform: scale(.95);
			transition-duration: .1s
		}
		/* Product cover */
		.product .cover {
			height: 300px;
			margin-bottom: 5px
		}
		/* Product footer (more infos) */
		.product-footer {
			padding: 0 8px;
			text-align: left
		}
		/* Title */
		.product-title {font-size: 18px}
		/* Author/date */
		.product-subtitle {
			display:flex;
			flex-direction:row;
			opacity: .65;
			font-size: 14px;
		}
		/* Price (€) */
		.product-price {
			padding-left: 8px;
			opacity: .9;
			font-size: 23px
		}
		/* Short description */
		.product-desc {
			display:block;
			opacity: .65;
			font-size: 16px;
			overflow:hidden;
			white-space: nowrap;
			text-overflow:ellipsis;
		}
		.product-primary-info{
			display:flex;
			flex-direction:row;
			justify-content:space-between;
		}
		.product-price{
			display:flex;
			align-items:center;
		}
		.product-author{
			margin-top:4px;
			margin-bottom:4px;
		}
	</style>
	<div class="container-fluid">
		<h1>Nos mangas</h1>
		<p>Découvrez notre catalogue de shonens, seinens, shojos, joseis et kodomos !</p>
		<div class="row">
			{% for product in products %}
				<div class="product-container">
					<a href="{{path('product', {id: product.id})}}" class="product">
						<img src="/images/cover/{{product.ProductCover}}.jpg" alt="Image de couverture" class="cover">
						<div class="product-footer">
							<div class="product-primary-info">
								<div class="product-info">
									<span class="product-title">{{product.ProductName}}</span>
									<span class="product-subtitle">
										<span class="product-author">
											{{product.ProductAuthor}} <span class="product-date">• {{product.ProductDate}}</span>
										</span>
									</span>
								</div>
								<div class="product-price">{{product.ProductPrice}}€</div>
							</div>
							<span class="product-desc">{{product.ProductDesc}}</span>
						</div>
					</a>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}