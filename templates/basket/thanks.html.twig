{% extends "base.html.twig" %}

{% block title %}
	{% if orderError == 0 %}
		Merci de votre achat !
	{% elseif orderError == 1 %}
		Commande refusée
	{% endif %} • Yellow
{% endblock %}

{% block body %}
	<link rel="stylesheet" href="/css/basket.css">
	<main class="center">
		{% if orderError == 0 %}
			<img src="images/chopper.png">
			<h1>Merci de votre achat !</h1>
			<p>
				Total de votre commande : {{total|number_format(2)}}€<br>
				Vous pouvez consulter à tout moment vos achats sur <a href="{{path('account')}}">votre compte</a>.
			</p>
		{% elseif orderError == 1 %}
			<img class="sadchopper" src="images/sadchopper.png">
			<h1>Stock insuffisant</h1>
			<p>
				Nous sommes désolés, les produits suivants ne peuvent pas être commandés :<br>
				{% for product in orderErrorProducts %}
				{{product.productName ~ ' (stock actuel : ' ~ product.productStock ~ ')'}}<br>
				<img class="producterroricon" src="/images/cover/{{product.productCover}}.jpg" alt="Image de couverture">
				{% endfor %}
			</p>
		{% endif %}
	</main>
{% endblock %}