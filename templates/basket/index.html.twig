{% extends "base.html.twig" %}

{% block title %}Panier • Yellow{% endblock %}

{% block body %}
	<link rel="stylesheet" href="/css/basket.css">
	<main>
		<h1>Mon panier</h1>
		<div class="basket-container">
			<div class="basket">
				{% if content|length == 0 %}
					<h2>Votre panier est vide !</h2>
					<p>Commencez à explorer notre catalogue.</p>
				{% else %}
					<h2>Contenu du panier</h2>
					<span class="basket-count">
						{{content|length}}
						{% if content|length > 1 %}
							items
						{% else %}
							item
						{% endif %}
					</span>
					<ul class="basket-content">
						{% for item in content %}
							<li>
								<div class="product-info-container">
									<img src="/images/cover/{{item.productCover}}.jpg" class="product-cover">
									<div class="product-info">
										<a href="{{path('product', {id: item.id})}}" class="product-title">{{item.productName}}</a>
										<span class="product-subtitle">
											<span class="product-author">{{item.productAuthor}}</span> • 
											<span class="product-date">{{item.productDate}}</span>
										</span>
										<span class="product-price">{{item.productPrice}}€</span>
									</div>
								</div>
								<div class="product-actions">
									<label class="product-quantity">
										Quantité
										<input type="number" value="1">
									</label>
									<button class="remove-from-basket">
										<ion-icon name="trash-outline"></ion-icon>
										Retirer
									</button>
								</div>
							</li>
						{% endfor %}
					</ul>
				{% endif %}
			</div>
			{% if content|length > 0 %}
				<div class="recap">
					<h2>Prix total (TTC) :</h2>
					<div class="total-price">
						{% set total = 0 %}
						{% for item in content %}
							{% set total = total + item.productPrice %}
						{% endfor %}
						{{total}}€
					</div>
					<a href="#" id="validate-basket">
						<ion-icon name="bag-check-outline"></ion-icon>
						Passer commande
					</a>
				</div>
			{% endif %}
		</div>
	</main>
{% endblock %}